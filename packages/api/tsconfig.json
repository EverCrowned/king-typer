{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./dist",
        "target": "ES6",
        "lib": ["ESNext", "DOM", "ESNext.Array"],
        "strict": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": false
    },
    "exclude": ["node_modules"],
    "include": ["src", "db"]
}
