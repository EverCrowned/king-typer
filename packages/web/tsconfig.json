{
    "compilerOptions": {
        "module": "commonjs",
        "experimentalDecorators": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "alwaysStrict": true,
        "downlevelIteration": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "sourceMap": true
    },
    "exclude": ["node_modules"]
}
